@{
  Layout = "_Layout";
}
@using PierresVendors.Models
<h4>Name: @Model.Name</h4>
<h6>@Model.Description</h6>

@if(Model.Orders.Count == 0)
{
  <h5>@Model.Name Has No Orders Yet</h5>
}
@foreach (Order order in Model.Orders)
{
  <ul>
    <li><a href="/vendor/@Model.Name/order/@order.Id">@order.Title</a></li>
  </ul>
}
<a href="/vendor/@Model.Name/order/new"><button class="btn btn-success">Add New Order</button></a>