@{
  Layout = "_Layout";
}
@using PierresVendors.Models
<h3>@Model.Name</h3>
<h5>@Model.Description</h5>

@if(Model.Orders.Count == 0)
{
  <h5>@Model.Name Has No Orders Yet</h5>
}
@foreach (Order order in Model.Orders)
{
  <h5><a href="/vendor/@Model.Name/order/@order.Id">@order.Title</a></h5>
}
<a href="/vendor/@Model.Name/order/new"><button class="btn btn-primary">Add New Order</button></a>
<a href="/"><button class="btn btn-danger">Home</button></a>
<a href="/vendor"><button class="btn btn-info">Back To Vendor List</button></a>