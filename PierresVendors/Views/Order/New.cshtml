@{
  Layout = "_Layout";
}
<h3>Create A Order For @Model.Name</h3>
<form action="/vendor/@Model.Name/order" method="post">
  <label for="title">Title</label>
  <input name="title" id="title" type="text">
  <label for="description">Description</label>
  <input name="description" id="description" type="text">
  <label for="price">Price</label>
  <input name="price" id="price" type="number">
  <label for="date">Date</label>
  <input name="date" id="date" type="text">
  <input id="vendorName" name="vendorName" type="hidden" value="@Model.Name">
  <button type="submit" class="btn btn-info">Submit</button>
</form>
<a href="/vendor/@Model.Name"><button class="btn btn-primary">Back to @Model.Name's Orders</button></a>
<a href="/"><button class="btn btn-danger">Home</button></a>